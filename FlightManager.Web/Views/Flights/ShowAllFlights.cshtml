<div class="text-center">
    <h1>Check Flights</h1>
</div>

<table class="table table-striped table-hover table- table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Unique Plane Number</th>
            <th>Date Time TakeOff</th>
            <th>Duration</th>
        </tr>
    </thead>

    @foreach (var flight in ViewBag.Flights)
    {
        <tr>
            <td>@flight.UniquePlaneNumber</td>
            <td>@flight.DateTimeTakeOff</td>
            <td>@flight.Duration</td>
        </tr>

        <thead class="thead-light">
            <tr>
                <th>First Name</th>
                <th>Second Name</th>
                <th>Family Name</th>
                <th>Nationality</th>
                <th>PIN</th>
                <th>Email</th>
                <th>Telephone Number</th>
                <th>Ticket Type</th>
            </tr>
        </thead>

        @foreach (var reservation in flight.Reservations)
        {
            <tr>
                <td>@reservation.FirstName</td>
                <td>@reservation.SecondName</td>
                <td>@reservation.FamilyName</td>
                <td>@reservation.Nationality</td>
                <td>@reservation.PIN</td>
                <td>@reservation.Email</td>
                <td>@reservation.TelephoneNumber</td>
                <td>@reservation.TicketType</td>
            </tr>
        }
    }
</table>