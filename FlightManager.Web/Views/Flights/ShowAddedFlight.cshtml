@model IEnumerable<FlightManager.Services.Models.OutputModels.FlightViewModel>

<div class="text-center">
    <h1>Check Flights</h1>
</div>

<table class="table table-striped table-hover table-sm table-bordered">
    <tr>
        <th>UniquePlaneNumber</th>
        <th>DateTimeTakeOff</th>
        <th>Duration</th>
        <th>Reservations</th>
    </tr>

    @foreach (var flight in Model)
    {
        <tr>
            <td>@flight.UniquePlaneNumber</td>
            <td>@flight.DateTimeTakeOff</td>
            <td>@flight.Duration</td>
        </tr>
        
        @foreach (var reservation in flight.Reservations)
        {
            <tr>
                <td>@reservation.FirstName</td>
                <td>@reservation.SecondName</td>
                <td>@reservation.FamilyName</td>
                <td>@reservation.Nationality</td>
                <td>@reservation.PIN</td>
                <td>@reservation.TelephoneNumber</td>
                <td>@reservation.TicketType</td>
            </tr>
        }
    }
</table>